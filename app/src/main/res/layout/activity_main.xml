<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv_hello_kotlin_parent_java"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hello Kotlin Parent Java"
            app:layout_constraintBottom_toBottomOf="@id/tv_hello_java_parent_java"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_hello_java_parent_java"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_hello_kotlin_parent_java"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Hello Java Parent Java"
    />

    <TextView
            android:id="@+id/tv_hello_kotlin_parent_kotlin"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_hello_java_parent_java"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Hello Java With Parent Kotlin"
    />

    <TextView
            android:id="@+id/tv_hello_java_parent_kotlin"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_hello_kotlin_parent_kotlin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Hello Java With Parent Kotlin"
    />

</LinearLayout>